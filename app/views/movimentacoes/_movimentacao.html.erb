<div id="<%= dom_id movimentacao %>" class="p-6 rounded-lg shadow-lg bg-white flex items-center <%= movimentacao.saida? ? 'text-red-700' : 'text-green-700' %>">
  <span class="mr-2">
    <%= l movimentacao.data %>
  </span> 
  <span class="mr-2 flex-grow">
    <%= movimentacao.descricao %>
  </span> 
  <span class="mr-4">
    <%= number_to_currency movimentacao.valor %>
  </span> 
  <%= button_to "Excluir", movimentacao, method: :delete, data: { "turbo-confirm": 'Deseja realmente excluir esta movimentação?' } , class: "rounded-lg shadow-lg p-4 bg-red-600 text-white block font-medium" %>
</div>
