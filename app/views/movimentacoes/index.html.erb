<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Movimentacoes" %>

  <div class="grid grid-cols-4 gap-4 mb-4">
    <div class="p-6 rounded-lg shadow-lg bg-white">
      <p>Saldo Atual</p>
      <p class="text-2xl font-bold">
        <%= number_to_currency @saldo %>
      </p>
    </div>
      <%= link_to "Nova Movimentação", new_movimentacao_path, class: "rounded-lg shadow-lg p-6 bg-blue-600 text-white block font-medium text-center" %>   
  </div>
  <div class="absolute top-4 right-4 text-white px-4 py-2 rounded">
      <%= button_to destroy_usuario_session_path, method: :delete, data: { "turbo-confirm": 'Deseja realmente sair?' }, class: "flex flex-col items-center rounded-lg shadow-lg p-6 bg-blue-600 text-white block font-medium" do %>
        <span>Logado como <%= current_usuario.email %></span>
        <span class="text-1xl font-bold">Sair</span>
      <% end %>
    </div>
 

  <div id="movimentacoes" class="grid grid-cols-1 gap-4 min-w-full">
    <% @movimentacoes.each do |movimentacao| %>
      <%= render movimentacao %>
    <% end %>
  </div>
</div>
